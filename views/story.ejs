<% include ./partials/header.ejs %>

<div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-75 z-50">
    <div class="bg-white rounded-lg shadow-lg max-w-lg w-full relative">
        <img src="/images/uploads/<%= story.story %>" alt="Story Image" class="rounded-t-lg w-full h-auto object-cover">
        
        <div class="p-4">
            <div class="story-info">
                <h2 class="text-xl font-semibold text-gray-800"><%= story.user.username %></h2>
                <h3 class="text-sm text-gray-600">Posted at: <%= new Date(story.createdAt).toLocaleString() %></h3>
            </div>
        </div>
        
        <button onclick="closeStory()" class="absolute top-2 right-2 text-white hover:text-gray-900 focus:outline-none">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
</div>

<script>
    // Automatically close the story after a set duration
    setTimeout(() => {
        window.location.href = '/feed'; // Redirect back to the feed
    }, 5000); // 5000 ms = 5 seconds

    // Function to close story manually
    function closeStory() {
        window.location.href = '/feed'; // Redirect back to the feed
    }
</script>

